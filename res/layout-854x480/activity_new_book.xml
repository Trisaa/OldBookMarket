<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/top"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/addbook_back_img"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/top_bt"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/register_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:text="发布新书"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/addbook_ok_img"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/top_bt"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" >

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/pe_finish_btn" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#E6EBDB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/addbook_edit_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="书籍名称"
                    android:textColor="@color/seagreen"
                    android:textSize="14sp" >
                </TextView>

                <EditText
                    android:id="@+id/addbook_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" >
                </EditText>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#E6EBDB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/addbook_plus" >
                </ImageView>

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/addbook_plus" >
                </ImageView>

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/addbook_plus" >
                </ImageView>

                <ImageView
                    android:id="@+id/takephoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/addbook_takephoto" >
                </ImageView>

                <Button
                    android:id="@+id/addbook_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫描"
                    android:visibility="gone" >
                </Button>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#E6EBDB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/addbook_edit_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="书籍价格"
                    android:textColor="@color/seagreen"
                    android:textSize="14sp" >
                </TextView>

                <EditText
                    android:id="@+id/addbook_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:inputType="numberDecimal"
                    android:maxLength="5" >
                </EditText>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#E6EBDB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/addbook_edit_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="分类"
                    android:textColor="@color/seagreen"
                    android:textSize="14sp" >
                </TextView>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="3" >

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:paddingLeft="1dp"
                        android:paddingRight="32dp"
                		android:scrollbars="none" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/coursebook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:background="#ffffff"
                                android:text="教材资料"
                                android:textColor="@color/seagreen"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/english"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:background="#ffffff"
                                android:text="英语专区"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/japanese"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:background="#ffffff"
                                android:text="日语专区"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/technology"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:background="#ffffff"
                                android:text="技术养成"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/master"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:background="#ffffff"
                                android:text="考研相关"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/entertain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:background="#ffffff"
                                android:text="休闲阅读"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:background="#ffffff"
                        android:paddingRight="10dp"
                        android:src="@drawable/pointer" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#E6EBDB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/addbook_edit_bg2"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="描述"
                        android:textColor="@color/seagreen"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/addbook_quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="这本书用了多久，几成新"
                        android:textSize="14sp" />

                    <GridLayout
                        android:id="@+id/quality_ll"
                        android:layout_width="220dp"
                        android:layout_height="80dp"
                        android:background="@drawable/addbook_grid_bg"
                        android:columnCount="3"
                        android:rowCount="3"
                        android:visibility="gone" >

                        <Button
                            android:id="@+id/new1"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/addbook_label_bg"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/new2"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/addbook_label_bg"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/new3"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/addbook_label_bg"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/new4"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/addbook_label_bg"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/new5"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/addbook_label_bg"
                            android:textSize="12sp" />
                    </GridLayout>

                    <EditText
                        android:id="@+id/addbook_who"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="这本书适合谁来读"
                        android:textSize="14sp" />

                    <GridLayout
                        android:id="@+id/who_ll"
                        android:layout_width="220dp"
                        android:layout_height="80dp"
                        android:background="@drawable/addbook_grid_bg"
                        android:columnCount="3"
                        android:rowCount="3"
                        android:visibility="gone" >

                        <Button
                            android:id="@+id/who1"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/addbook_label_bg"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/who2"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/addbook_label_bg"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/who3"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/addbook_label_bg"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/who4"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/addbook_label_bg"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/who5"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/addbook_label_bg"
                            android:textSize="12sp" />
                    </GridLayout>

                    <EditText
                        android:id="@+id/addbook_help"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="评价一下这本书对你的帮助（不少于10个字）"
                        android:minHeight="50dp"
                        android:gravity="top|left"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#E6EBDB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/addbook_edit_bg2"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="联系方式"
                        android:textColor="@color/seagreen"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/addbook_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="手机（必填项）"
                        android:inputType="phone"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/addbook_qq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="QQ"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/addbook_wechat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="微信"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>