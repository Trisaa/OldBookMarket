<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wishmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEDE5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_bottom"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#3D7751" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="心愿书单"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/wish_product_btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/top_bt"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/pc_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:text="发起心愿单"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp" >

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:paddingLeft="1dp"
                android:paddingRight="32dp"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/all"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/wish_type_bg"
                        android:text="全部分类"
                        android:textSize="18sp"
                        android:textColor="@color/seagreen" />

                    <Button
                        android:id="@+id/coursebook"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/wish_type_selector"
                        android:text="教材资料" 
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/english"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/wish_type_selector"
                        android:text="英语专区"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/japanese"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/wish_type_selector"
                        android:text="日语专区"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/technology"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/wish_type_selector"
                        android:text="技术养成"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/master"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/wish_type_selector"
                        android:text="考研相关"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/entertain"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/wish_type_selector"
                        android:text="休闲阅读"
                        android:textSize="18sp" />
                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:background="#ffffff"
                android:paddingRight="10dp"
                android:src="@drawable/pointer" />
        </RelativeLayout>

        <com.yunjian.view.PullToRefreshView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_pull_refresh_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/wish_book_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000" />
        </com.yunjian.view.PullToRefreshView>
    </LinearLayout>

</RelativeLayout>