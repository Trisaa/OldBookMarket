<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:padding="8dp">
    
    <ImageView
        android:id="@+id/search_bookimage" 
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:adjustViewBounds="true"
        android:src="@drawable/default_image"/>
    <LinearLayout 
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
         <TextView 
             android:paddingTop="5dp"
                android:id="@+id/search_bookname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编译原理"
                android:textSize="16sp"
                />
          <TextView
                android:paddingTop="4dp"
                android:id="@+id/search_seller" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【发布人】CC学长"
                android:textSize="14sp"
                />
      
        <LinearLayout 
            android:padding="4dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:id="@+id/search_booktype" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教材资料"
                android:background="@drawable/result_type"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                />
            
        </LinearLayout>
         <TextView
                android:id="@+id/search_time"  
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布时间"
                android:textSize="14sp"
                />
        
    </LinearLayout>
        
</LinearLayout>
